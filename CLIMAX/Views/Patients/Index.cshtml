@model IEnumerable<CLIMAX.Models.Patient>

    @{
        ViewBag.Title = "Index";
    }


    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Patient Records</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Brief information of all Dermstrata Patients<br /><br />
                        <p>
                            @Html.ActionLink("Create New", "Create")
                            </p>
                        @using (Html.BeginForm())
                        {

                            @Html.TextBox("searchValue") <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>



                        }
                    </div>
                   
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            
                             <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                
                                
                                <thead>
                                    
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MiddleName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Gender)
                                        </th>
                                       
                                        <th>Settings</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MiddleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>

                                            @if (item.Gender)
                                            {
                                                <td>
                                                    Male
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Female
                                                </td>
                                            }

                                           
                                            <td>
                                                <button type="button" class="btn btn-default" aria-label="Left Align">
                                                    <span class="glyphicon glyphicon-edit" aria-hidden="true">@Html.ActionLink("Edit", "Edit", new { id = item.PatientID })</span>
                                                </button>
                                                <button type="button" class="btn btn-default" aria-label="Left Align">
                                                    <span class="glyphicon glyphicon-user" aria-hidden="true">@Html.ActionLink("Details", "Details", new { id = item.PatientID })</span>
                                                </button>
                                                <button type="button" class="btn btn-default" aria-label="Left Align">
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true">@Html.ActionLink("Delete", "Delete", new { id = item.PatientID })</span>
                                                </button>
                                            </td>
                                           
                                        </tr>
                                    }
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
