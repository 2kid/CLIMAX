@model CLIMAX.Models.Inventory

@{
    ViewBag.Title = "Inventory - Edit";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Inventory</h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p>
                            @Html.ActionLink("Inventory", "Index") > Update
                        </p>
                        </div>
                        
                

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <div class="form-horizontal">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.InventoryID)

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.MaterialID, "Material", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.DropDownListFor(model => model.MaterialID, (IEnumerable<SelectListItem>)ViewBag.Materials)
                                                    @Html.ValidationMessageFor(model => model.MaterialID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            Add to Stock:
                                            <div class="form-group">
                                                @Html.Label("addQty", "Quantity to add", new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.TextBox("addQty", 0, new { @class = "form-control", type = "number", min = "0" })
                                                </div>
                                            </div>

                                            Subtract from Stock:
                                            <div class="form-group">
                                                @Html.Label("subtractQty", "Quantity to subtract", new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.TextBox("subtractQty", 0, new { @class = "form-control", type = "number", min = "0" })
                                                </div>
                                            </div>

                                            At what quantity should we remind you to restock?
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.QtyToAlert, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(model => model.QtyToAlert, new { @class = "form-control", type = "number", min = "0" })
                                                    @Html.ValidationMessageFor(model => model.QtyToAlert, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Save" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
