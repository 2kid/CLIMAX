@model IEnumerable<CLIMAX.Models.Procedure>

@{
    ViewBag.Title = "Index";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Procedure</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @if (User.IsInRole("Admin") || User.IsInRole("Auditor"))
                    {
                        <p>
                            @Html.ActionLink("Create New", "Create", new { id = ViewBag.TreatmentID })
                        </p>
                    }
                    @using (Html.BeginForm())
                    {
                        @Html.TextBox("searchValue")
                        <button type="submit" class="btn btn-default">SEARCH</button>
                    }
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">

                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">


                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProcedureName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StepNo)
                                    </th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProcedureName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StepNo)
                                        </td>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Auditor"))
                                        {
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ProcedureID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Details", "Details", new { id = item.ProcedureID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ProcedureID }, new { @class = "btn btn-default" })

                                            </td>
                                        }
                                        else
                                        {
                                            <td>@Html.ActionLink("Details", "Details", new { id = item.ProcedureID }, new { @class = "btn btn-default" })</td>
                                        }

                                    </tr>
                                }
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
