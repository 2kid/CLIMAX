@model IEnumerable<CLIMAX.Models.EmployeeTransactionsViewModel>

@{
    ViewBag.Title = "Employee - Index";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Employee Records</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Brief information of Employee's Patients<br /><br />
                </div>
                @using (Html.BeginForm())
                {
                    @Html.TextBox("searchValue","", new { @class="form-control"}) <button type="submit" class="btn btn-default">SEARCH</button>
                }
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateTimeOfTransaction)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Treatments)
                                    </th>
                                        <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Patient)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateTimeOfTransaction)
                                        </td>
                                        <td>
                                            @foreach(string treatment in item.Treatments)
                                            { 
                                                 <div>
                                                     @treatment
                                                 </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->