@model IEnumerable<CLIMAX.Models.Treatments>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using(Html.BeginForm())
{
    @Html.TextBox("searchValue")
    <button type="submit" class="btn btn-primary">Search</button>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TreatmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TreatmentPrice)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TreatmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TreatmentPrice)
        </td>
        <td>
            @Html.ActionLink("View Procedures", "Index", "Procedures", new { id = item.TreatmentsID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentsID }, new { @class="btn btn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id = item.TreatmentsID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TreatmentsID }, new { @class="btn btn-primary"}) 
        </td>
    </tr>
}

</table>
