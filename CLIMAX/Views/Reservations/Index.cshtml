@model IEnumerable<CLIMAX.Models.Reservation>

    @{
        ViewBag.Title = "Index";
    }





    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Reservations</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p>
                            @Html.ActionLink("Create New", "Create")

                        </p>

                        @using (Html.BeginForm())
                        {

                            @Html.TextBox("searchValue")
                            <button type="submit" class="btn btn-default">Search</button>



                        }
                    </div>

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                            
                              
                            
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">


                                <thead>

                                    <tr>
                                        <th>
                                            Patient
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TreatmentID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ReservationType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DateTimeReserved)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Notes)
                                        </th>
                                        <th>
                                            Therapist
                                        </th>
                                        
                                        <th>Settings</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.patient.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.treatment.TreatmentName)
                                            </td>
                                            @if (item.ReservationType)
                                            {
                                                <td>
                                                    Surgical
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    Treatment
                                                </td>
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateTimeReserved)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Notes)
                                            </td>
                                            @if (item.employee != null)
                                            {
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.employee.FullName)
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>
                                            
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ReservationID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Details", "Details", new { id = item.ReservationID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Disable", "Disable", new { id = item.ReservationID }, new { @class = "btn btn-default" })
                                            </td>

                                        </tr>
                                    }
                                    
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
