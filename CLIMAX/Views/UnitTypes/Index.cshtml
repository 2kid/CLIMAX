@model IEnumerable<CLIMAX.Models.UnitType>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        @if(User.IsInRole("Auditor")||User.IsInRole("Admin"))
        { 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UnitTypeID }, new { @class="btn btn-primary"}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UnitTypeID },null)
        </td>
        }
        else
        {
            <td></td>
        }
    </tr>
}

</table>
