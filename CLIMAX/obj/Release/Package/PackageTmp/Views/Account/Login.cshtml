@using CLIMAX.Models
@model LoginViewModel
@{
    Layout = null;
}
<head>
    <title>Login</title>
    <link href='@Url.Content("~/Content/bootstrap-3.3.2-dist/bootstrap-theme.css")' rel="stylesheet" />
    <link href='@Url.Content("~/Content/bootstrap.min.css")' rel="stylesheet" />
    <link href='@Url.Content("~/Content/Logstyle.css")' rel="stylesheet" />
</head>
<body>
    <div id="wrapper" class="container col-md-12 margintop-50">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
        {
          <!--HEADER-->
            <div class="header">
                <!--TITLE--><h1>Login</h1><!--END TITLE-->
            </div>
         <!--END HEADER-->
            <!--CONTENT-->
            @Html.AntiForgeryToken()
            <div class="content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!--Username-->
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input username", placeholder = "E-Mail", name = "username" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })<br />

                <!--PASSWORD-->
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input password", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
          <!--END CONTENT-->
            <!--FOOTER-->
            <div class="footer">
                <!--LOGIN BUTTON-->

                <input type="submit" name="submit" value="Log-in" class="button btn" btn-primary />

                <!--END LOGIN BUTTON-->
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    <p>Remember Me</p>
                </div>
                <div>
                    @Html.ActionLink("Forgot Password","ForgotPassword")
                </div>
            </div>
            <!--END FOOTER-->
        }
        <!--END LOGIN FORM-->
        <!--GRADIENT--><div class="gradient"></div><!--END GRADIENT-->
    </div>
    <script src='@Url.Content("~/Scripts/jquery-2.1.3.js")'></script>
    <script src='@Url.Content("~/Scripts/jquery.min.js")'></script>
    <script src='@Url.Content("~/Scripts/bootstrap.min.js")'></script>
</body>