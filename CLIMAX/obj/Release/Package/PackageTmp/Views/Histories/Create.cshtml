                @ViewBag.Patient
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TreatmentID, "Treatment Name",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TreatmentID")
            </div>
        </div>

