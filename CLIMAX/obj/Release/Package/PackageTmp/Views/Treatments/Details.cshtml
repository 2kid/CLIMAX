@model CLIMAX.Models.Treatments

@{
    ViewBag.Title = "Treatments - Details";
}

<div>
    <h4>Treatments</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TreatmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TreatmentName)
        </dd>
        <dt>Material / Qty</dt>
        @foreach(CLIMAX.Models.MaterialsViewModel item in ViewBag.MaterialList)
        {
            <dd>@item.MaterialName / @item.units</dd>
        }
    </dl>
</div>
<div class="row">
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.TreatmentsID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>